<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TableLayout android:layout_height="fill_parent"
		android:id="@+id/tableLayout1" android:layout_width="fill_parent">
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_gravity="top" android:baselineAligned="true" android:minHeight="30dp" android:layout_weight="1" android:layout_height="0dp">
			<TextView android:id="@+id/titleText" android:textSize="30.0sp"
				android:text=" - NAME - " android:layout_width="wrap_content"
				android:layout_height="fill_parent"></TextView>
		</TableRow>
		<FrameLayout android:id="@+id/FrameLayout1" android:layout_width="fill_parent" android:baselineAligned="true" android:layout_height="138dp">
			<TextView android:id="@+id/descText" android:text=" - DESC -"
				android:layout_height="fill_parent" android:layout_gravity="left" android:layout_width="155dp"></TextView>
			<ImageView android:src="@drawable/noimage"
				android:maxWidth="640px" android:maxHeight="480px" android:scaleType="fitEnd"  android:layout_width="160dp" android:layout_height="120dp" android:layout_gravity="right" android:layout_margin="5px" android:id="@+id/dishImage" ></ImageView>
		</FrameLayout>
		<TableRow android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="0dp" android:id="@+id/comCapRow">
			<TextView android:layout_height="fill_parent" android:textSize="20.0sp" android:layout_width="wrap_content" android:id="@+id/commentTitle" android:text="@string/CAP_COMMENTS"></TextView>
		</TableRow>
		<ScrollView android:id="@+id/scrollView1" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
				<TextView android:layout_marginTop="5dp" android:id="@+id/comText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/CAP_NOCOM"></TextView>
			</LinearLayout>
		</ScrollView>
		<TableRow android:id="@+id/debugRow" android:layout_height="wrap_content" android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="- Start -" android:layout_marginTop="8px" android:id="@+id/dishDbgText" android:layout_weight="0.8"></TextView>
		</TableRow>
	</TableLayout>
</LinearLayout>
